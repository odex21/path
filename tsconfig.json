{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "/@/*": [
        "./*"
      ],
      "/src/*": [
        "./visual/src/*"
      ],
      "spritejs": [
        "spritejs/dist/spritejs.esm.js"
      ]
    },
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ES2015",
      "ES5"
    ],
  },
  "include": [
    "visual",
    "source",
  ],
  "exclude": [
    "visual/dist/*",
    "visual/src/panel/sprite3d/sprite-ext-3d/*"
  ]
}
